<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]  - Sistema_OE</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* noelia<link rel="stylesheet" href="~/SOE.styles.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/js/site.js" />
    <!-- CSS de Bootstrap (agrega el enlace correcto si estás usando una versión específica) -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <!-- Agrega el enlace al archivo de estilos CSS de SweetAlert -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@8/dist/sweetalert2.min.css">
    <!-- Agrega el enlace al archivo de JavaScript de highlight.js -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.8.0/styles/default.min.css">

    <link href="~/css/styles.css" rel="stylesheet" />

    <!-- esto fue lo que le agregue para el carrucel-->

   <!-- codigo de prueba noe-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Libraries Stylesheet -->
    <link href="~/lib/bootstrap/animate.min.css" rel="stylesheet">
    <link href="~/css/myStyle.css" rel="stylesheet">
    <link href="~/css/myStyleTwo.css" rel="stylesheet"> 
    <!-- fin codigo de prueba noe-->
    

</head>
<body>

    <div class="d-flex" id="wrapper" >
        <!-- Sidebar-->
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">SistemaOE</div>
            <div class="list-group list-group-flush">
                <sidebar>
                    <ul>
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">INICIO</a></li>
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Administratidor" asp-action="Index">Administrativos</a></li>
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Materia" asp-action="Index">Materia</a></li>
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Seccions" asp-action="Index">Seccion</a></li>
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Profesor" asp-action="Index">Profesor</a></li>
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Estudiante" asp-action="Index">Estudiante</a></li>
                        <li><a class="nav-link text-dark" asp-area="" asp-controller="Expediente" asp-action="Index">Expediente</a></li>
                     
                    </ul>
                </sidebar>

            </div>
        </div>
        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <!-- le agrege esto nuevo-->
                    <i class="bi bi-justify">
                        <button class="btn" id="sidebarToggle" style="background-color: #bcd0ca">
                            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="currentColor" class="bi bi-justify" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M2 12.5a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5z" />
                            </svg>
                        </button>
                    </i>
                </div>
            </nav>

            <div class="right_col x f" id="renderBody" role="main">

                @RenderBody()

            </div>
            @*             <footer>
            <div class="pull-right">
            SOE
            </div>
            <div class="clearfix"></div>
            </footer> *@

        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script> 

    @await RenderSectionAsync("Scripts", required: false)

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script>
    <!-- esto fue lo que le agregue para el carrucel-->
</body>
</html>